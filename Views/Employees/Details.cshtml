@model EmployeeCrudPdf.Models.Employee



<div class="card">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h3 class="mb-0">Employee #@Model.Id</h3>
      <div class="d-flex gap-2">
        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Id" data-log="Employees/EditButton" >Edit</a>
        <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
        <a class="btn btn-success" asp-action="DownloadPdf" asp-route-id="@Model.Id">Download PDF</a>
      </div>
    </div>
    <dl class="row">
      <dt class="col-sm-3">Name</dt><dd class="col-sm-9">@Model.Name</dd>
      <dt class="col-sm-3">Department</dt><dd class="col-sm-9">@Model.Department</dd>
      <dt class="col-sm-3">Email</dt><dd class="col-sm-9">@Model.Email</dd>
      <dt class="col-sm-3">Salary</dt><dd class="col-sm-9">@Model.Salary.ToString("C")</dd>
    </dl>
  </div>
</div>
