@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Employees";
    Layout = "_Layout";
}
<div class="d-flex justify-content-between align-items-center mb-3">
  <h2 class="mb-0">Employees</h2>
  <a class="btn btn-primary" asp-action="Create">+ New Employee</a>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Id</th><th>Name</th><th>Department</th><th>Email</th><th class="text-end">Salary</th><th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var e in Model)
    {
      <tr>
        <td>@e.Id</td>
        <td>@e.Name</td>
        <td>@e.Department</td>
        <td>@e.Email</td>
        <td class="text-end">@e.Salary.ToString("C")</td>
        <td class="text-end">
          <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@e.Id">View</a>
          <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@e.Id">Edit</a>
          <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@e.Id">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>
